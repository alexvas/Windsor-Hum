<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:h='urn:import:hum.client.widget'
    >
  <ui:style>
    .comment {
      overflow: hidden;
    }

    .commentText {
      display: block;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.comment}">
    Anything specific this time?
    <g:TextArea ui:field="comment" addStyleNames="{style.commentText}"/>
  </g:HTMLPanel>
</ui:UiBinder>
