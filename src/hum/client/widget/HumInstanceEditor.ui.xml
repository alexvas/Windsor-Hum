<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:h='urn:import:hum.client.widget'

    >
  <ui:style>
    .where, .when, .howStrong, .comment {
      overflow: hidden;
    }

    .howStrong ul {
      list-style: none;
      margin-left: 0;
      padding-left: 1em;
      text-indent: -1em;
    }

    .level {
      display: block;
    }

    .zip {
      display: block;
      float: left;
    }

    .summary {
      overflow: auto;
    }

    .commentText {
      display: block;
    }

    .commentLegend {

    }

    .share {
      -moz-border-bottom-colors: none;
      -moz-border-image: none;
      -moz-border-left-colors: none;
      -moz-border-right-colors: none;
      -moz-border-top-colors: none;
      background: url("images/btn_stretch.png") repeat-x red;
      border-color: transparent;
      border-radius: 5px 5px 5px 5px;
      border-style: solid;
      border-width: 1px;
      cursor: pointer;
      margin: 0;
      padding: 9px 16px;
      text-decoration: none;
      clear: both;
      margin-top: 30px;
      font-size: larger;
      font-weight: bold;
      color: white;
    }

    .share:active {
      border: 1px inset #CCCCCC;
    }

    .share:hover {
      border-color: #939393;
    }

    .share[disabled] {
      color: #888888;
      cursor: default;
    }

    .share[disabled]:hover {
      border: 1px outset #CCCCCC;
    }

    .share {
      clear: both;
    }

    .datePicker, .timePicker {
      margin-left: 20px;
    }

    .timePicker {
      margin-top: 20px;
      font-size: larger;
    }

    .startedNow {
      display: block;
      float: left;
      clear: left;
      margin-top: 20px;
      margin-left: 20px;
    }

    .go {
      display: block;
      float: left;
      padding: 3px 3px;
      margin-top: -1px;
      margin-left: 2px;
    }

    .hint {
      display: block;
      float: left;
    }
  </ui:style>
  <g:DockLayoutPanel>
    <g:north size="150">
      <g:HTMLPanel styleName="{style.summary}">
        <ul>
          <li>Address:
            <span ui:field="address"/>
          </li>
          <li>Latitude:
            <span ui:field="lat"/>
          </li>
          <li>Longitude:
            <span ui:field="lng"/>
          </li>
          <li>Date and time:
            <span ui:field="summaryStarted"/>
          </li>
          <li>Level:
            <span ui:field="summaryLevel"/>
          </li>
        </ul>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:StackLayoutPanel unit='PX' ui:field="stack">
        <g:stack>
          <g:header size='30'>Where</g:header>
          <g:HTMLPanel styleName="{style.where}">
            <p>Click the map at the place you heard the hum or enter an address below</p>
            <g:TextBox ui:field="zip" styleName="{style.zip}"/>
            <g:Button ui:field="go" styleName="{style.go}" text="Go!"/>
            <span class="{style.hint}">(just a postcode will do)</span>
          </g:HTMLPanel>
        </g:stack>

        <g:stack>
          <g:header size='30'>When</g:header>
          <g:HTMLPanel styleName="{style.when}">
            <p>When did the hum started?</p>
            <d:DatePicker ui:field="startedDate" addStyleNames="{style.datePicker}"/>
            <h:HourMinutePicker ui:field="startedTime" addStyleNames="{style.timePicker}"/>
            <g:Button text="Rumbling Has Just Started" ui:field="startedNow" addStyleNames="{style.startedNow}"/>
          </g:HTMLPanel>
        </g:stack>

        <g:stack>
          <g:header size='30'>How Strong</g:header>
          <g:HTMLPanel styleName="{style.howStrong}">
            <p>How strong do you think the hum level is? Please select:</p>
            <ul>
              <li>
                <img alt="" src=""/>
                <g:RadioButton name="level" ui:field="levelLow"/>
                Low (barely hear)
              </li>
              <li>
                <img alt="" src=""/>
                <g:RadioButton name="level" ui:field="levelMedium"/>
                Medium (hard to ignore)
              </li>
              <li>
                <img alt="" src=""/>
                <g:RadioButton name="level" ui:field="levelHigh"/>
                High (window rattle)
              </li>
            </ul>
          </g:HTMLPanel>
        </g:stack>

        <g:stack>
          <g:header size='30'>Comment</g:header>
          <g:HTMLPanel styleName="{style.comment}">
            Anything specific this time?
            <g:TextArea ui:field="comment" addStyleNames="{style.commentText}"/>
            <g:Button styleName="{style.share}" text="Share!" ui:field="share" enabled="false"/>
          </g:HTMLPanel>
        </g:stack>
      </g:StackLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
