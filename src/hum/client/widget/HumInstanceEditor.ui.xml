<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d='urn:import:com.google.gwt.user.datepicker.client'
             xmlns:s='urn:import:com.summatech.gwt.client'

    >
  <ui:style>
    .root, .where, .when, .howStrong {
      overflow: hidden;
    }

    .zip, .level {
      display: block;
    }
  </ui:style>
  <g:DockLayoutPanel>
    <g:north size="150">
      <g:HTMLPanel>
        <ul>
          <li>Address:
            <span ui:field="address"/>
          </li>
          <li>Latitude:
            <span ui:field="lat"/>
          </li>
          <li>Longitude:
            <span ui:field="lng"/>
          </li>
          <li>Date and time:
            <span ui:field="time"/>
          </li>
          <li>Level:
            <span ui:field="summaryLevel"/>
          </li>
        </ul>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:StackLayoutPanel unit='PX' ui:field="stack">
        <g:stack>
          <g:header size='30'>Where</g:header>
          <g:HTMLPanel styleName="{style.where}">
            Click the map at the place you heard the hum.
            or enter address below
            <g:TextBox ui:field="zip" styleName="{style.zip}"/>
            (postcode will do)
          </g:HTMLPanel>
        </g:stack>

        <g:stack>
          <g:header size='30'>When</g:header>
          <g:HTMLPanel styleName="{style.when}">
            When did the hum started?
            <d:DatePicker ui:field="datePicker"/>
            <s:HourMinutePicker ui:field="hourMinutePicker"/>
          </g:HTMLPanel>
        </g:stack>

        <g:stack>
          <g:header size='30'>How Strong</g:header>
          <g:HTMLPanel styleName="{style.howStrong}">
            Please select the hum level below:
            <g:ListBox ui:field="level" addStyleNames="{style.level}"/>
            <ul>
              <li>Low (barely hear)</li>
              <li>Medium (hard to ignore)</li>
              <li>High (window rattle)</li>
            </ul>
          </g:HTMLPanel>
        </g:stack>
      </g:StackLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
