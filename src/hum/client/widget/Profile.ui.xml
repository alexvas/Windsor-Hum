<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:style>
    .profile {
      overflow: hidden;
    }

    .profile h2 {
      margin-top: 0;
      display: block;
      float: right;
    }

    .profile img {
      display: block;
      float: right;
      margin-left: 20px;
    }

    .userName {
      overflow: hidden;
      float: right;
      margin-left: 20px;
    }

    .signOutWrapper {
      overflow: hidden;
      float: right;
    }

    .avatar {
      height: 72px;
      display: block;
      float: right;
    }

    .addthis {
      overflow: hidden;
      float: right;
      margin-right: 35px;
      display: inline-block;
      min-width: 145px;
    }

    .secondLine {
      overflow: hidden;
      float: right;
      clear: right;
      margin-left: 20px;
    }
  </ui:style>
  <g:HTMLPanel styleName="{style.profile}">
    <div class="{style.userName}">
      <h2 ui:field="userName"/>
      <div class="{style.secondLine}">
        <div class="{style.signOutWrapper}">Not you?
          <g:Anchor ui:field="signOut" href="javascript:" text="Sign Out"/>
        </div>
        <div class="addthis_toolbox addthis_default_style {style.addthis}">
          <a class="addthis_button_preferred_1"/>
          <a class="addthis_button_preferred_2"/>
          <a class="addthis_button_preferred_3"/>
          <a class="addthis_button_preferred_4"/>
          <a class="addthis_button_compact"/>
          <a class="addthis_counter addthis_bubble_style"/>
        </div>
      </div>
    </div>
    <img ui:field="avatar" alt="" src="" class="{style.avatar}"/>
  </g:HTMLPanel>
</ui:UiBinder>
