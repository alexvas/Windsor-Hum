<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:h='urn:import:hum.client.widget'
    >
  <ui:style>

    .header {
      padding: 20px 20px;
    }

    .header h1, .header p, .addthis {
      overflow: hidden;
      float: left;
      clear: left;
    }

    .header h1 {
      margin-top: 0;
      margin-bottom: 0;
    }

    .header p {
      margin-top: 10px;
      margin-bottom: 5px;
    }

    .about {
      padding: 20px;
      line-height: 1.6;
      overflow: hidden;
    }

    .btnReport {
      -moz-border-bottom-colors: none;
      -moz-border-image: none;
      -moz-border-left-colors: none;
      -moz-border-right-colors: none;
      -moz-border-top-colors: none;
      background: url("images/btn_stretch.png") repeat-x red;
      border-color: transparent;
      border-radius: 5px 5px 5px 5px;
      border-style: solid;
      border-width: 1px;
      cursor: pointer;
      margin: 0;
      padding: 9px 16px;
      text-decoration: none;
      clear: both;
      margin-top: 30px;
      font-size: larger;
      font-weight: bold;
      color: white;
    }

    .btnReport:active {
      border: 1px inset #CCCCCC;
    }

    .btnReport:hover {
      border-color: #939393;
    }

    .btnReport[disabled] {
      color: #888888;
      cursor: default;
    }

    .btnReport[disabled]:hover {
      border: 1px outset #CCCCCC;
    }

    .profile {
      float: right;
    }

    .userMenu {
      position: absolute;
      top: 20px;
      left: 360px;
    }

    .errors {
      position: absolute;
      bottom: 20px;
      left: 360px;
    }

  </ui:style>
  <g:DockLayoutPanel unit='PX'>
    <g:north size='112'>
      <g:HTMLPanel styleName="{style.header}">
        <h1>Windsor Hum</h1>
        <h:Profile addStyleNames="{style.profile}" ui:field="profile"/>
        <h:UserMenu addStyleNames="{style.userMenu}" ui:field="userMenu"/>
        <h:Errors addStyleNames="{style.errors}" ui:field="errors"/>
        <p>Do you hear rumbling again?</p>
        <div class="addthis_toolbox addthis_default_style {style.addthis}">
          <a class="addthis_button_preferred_1"/>
          <a class="addthis_button_preferred_2"/>
          <a class="addthis_button_preferred_3"/>
          <a class="addthis_button_preferred_4"/>
          <a class="addthis_button_compact"/>
          <a class="addthis_counter addthis_bubble_style"/>
        </div>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:HTML ui:field='mapPlace'/>
        </g:center>
        <g:west size='360'>
          <g:DeckLayoutPanel ui:field="deck">
            <g:HTMLPanel ui:field="about" styleName="{style.about}">
              <h2>About</h2>
              The goal of the project is to find out and track the source of rumbling noise bothering
              citizens of Windsor and Essex counties. Here is what
              <a href="http://www.windsorstar.com/Rumblings+prompt+lawsuit/5209300/story.html" target="_blank">local
                press says</a>. We are going to gather enough statistical data to figure out geographical location of
              the
              hum source and what time it would appear next. We need your help to collect data. Please report rumbling
              here when you hear it.
              <g:Button text="Report!" ui:field="report" styleName="{style.btnReport}"/>
            </g:HTMLPanel>
            <g:DockLayoutPanel ui:field="editor">
              <g:north size="150">
                <h:Summary ui:field="summary"/>
              </g:north>
              <g:center>
                <h:HumUiEditor ui:field="humUiEditor"/>
              </g:center>
            </g:DockLayoutPanel>
          </g:DeckLayoutPanel>
        </g:west>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
