<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
    >
  <ui:style>

    .header {
      padding: 20px 20px;
    }

    .header h1, .header p {
      float: left;
      clear: left;
      margin-bottom: 0;
    }

    .header h1, .header h2 {
      margin-top: 0;
    }

    .header h2, .header img {
      display: block;
      float: right;
      margin-left: 20px;
    }

    .content {
      padding: 20px;
      line-height: 1.6;
    }

    .btn {
      float: left;
      clear: both;
      background: url(/images/btn_left.png) no-repeat;
      padding: 0 0 0 10px;
      margin: 5px 0;
    }

    .btn a {
      float: left;
      height: 40px;
      background: url(/images/btn_stretch.png) repeat-x left top;
      line-height: 40px;
      padding: 0 10px;
      color: #fff;
      font-size: 1em;
      text-decoration: none;
    }

    .btn span {
      background: url(images/btn_right.png) no-repeat;
      float: left;
      width: 10px;
      height: 40px;
    }

    .btnReport {
      background-color: red;
      clear: both;
      margin-top: 30px;
      font-size: larger;
      font-weight: bold;
    }
  </ui:style>
  <g:DockLayoutPanel unit='PX'>
    <g:north size='112'>
      <g:HTMLPanel styleName="{style.header}">
        <h1>Windsor Hum</h1>
        <h2 ui:field="userName"/>
        <img ui:field="avatar"/>
        <p>Do you hear rumbling again?</p>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:HTML ui:field='mapPlace'/>
        </g:center>
        <g:west size='360'>
          <g:HTMLPanel ui:field="content" styleName="{style.content}">
            <h2>About</h2>
            The goal of the project is to find out and track the source of rumbling noise bothering
            citizens of Windsor and Essex counties. Here is what
            <a href="http://www.windsorstar.com/Rumblings+prompt+lawsuit/5209300/story.html" target="_blank">local
              press says</a>. We are going to gather enough statistical data to figure out geographical location of the
            hum source and what time it would appear next. We need your help to collect data. Please report rumbling
            here when you hear it.
            <div class="{style.btn} {style.btnReport}">
              <g:Anchor text="Report!" ui:field="report" href="javascript:"/>
              <span/>
            </div>
            <div class="clear"/>
          </g:HTMLPanel>
        </g:west>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
