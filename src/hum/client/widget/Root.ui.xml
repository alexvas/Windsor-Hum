<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:h='urn:import:hum.client.widget'
    >
  <ui:style>

    .header {
      padding: 20px 20px;
    }

    .header h1, .header p {
      float: left;
      clear: left;
      margin-bottom: 0;
    }

    .header h1, .header h2 {
      margin-top: 0;
    }

    .header h2, .header img {
      display: block;
      float: right;
      margin-left: 20px;
    }

    .about {
      padding: 20px;
      line-height: 1.6;
      overflow: hidden;
    }

    .btnReport {
    }

    .btnReport {
      -moz-border-bottom-colors: none;
      -moz-border-image: none;
      -moz-border-left-colors: none;
      -moz-border-right-colors: none;
      -moz-border-top-colors: none;
      background: url("images/btn_stretch.png") repeat-x red;
      border-color: transparent;
      border-radius: 5px 5px 5px 5px;
      border-style: solid;
      border-width: 1px;
      cursor: pointer;
      margin: 0;
      padding: 9px 16px;
      text-decoration: none;
      clear: both;
      margin-top: 30px;
      font-size: larger;
      font-weight: bold;
      color: white;
    }

    .btnReport:active {
      border: 1px inset #CCCCCC;
    }

    .btnReport:hover {
      border-color: #939393;
    }

    .btnReport[disabled] {
      color: #888888;
      cursor: default;
    }

    .btnReport[disabled]:hover {
      border: 1px outset #CCCCCC;
    }

    .userName {
      overflow: hidden;
      float: right;
    }

    .signOutWrapper {
      float: right;
      clear: right;
    }

  </ui:style>
  <g:DockLayoutPanel unit='PX'>
    <g:north size='112'>
      <g:HTMLPanel styleName="{style.header}">
        <h1>Windsor Hum</h1>
        <div class="{style.userName}">
          <h2 ui:field="userName"/>
          <span ui:field="signOutWrapper" class="{style.signOutWrapper}" style="display: none;">Not you?
            <g:Anchor ui:field="signOut" href="javascript:" text="Sign Out"/>
          </span>
        </div>
        <img ui:field="avatar"/>
        <p>Do you hear rumbling again?</p>
      </g:HTMLPanel>
    </g:north>
    <g:center>
      <g:SplitLayoutPanel>
        <g:center>
          <g:HTML ui:field='mapPlace'/>
        </g:center>
        <g:west size='360'>
          <g:DeckLayoutPanel ui:field="deck">
            <g:HTMLPanel ui:field="about" styleName="{style.about}">
              <h2>About</h2>
              The goal of the project is to find out and track the source of rumbling noise bothering
              citizens of Windsor and Essex counties. Here is what
              <a href="http://www.windsorstar.com/Rumblings+prompt+lawsuit/5209300/story.html" target="_blank">local
                press says</a>. We are going to gather enough statistical data to figure out geographical location of
              the
              hum source and what time it would appear next. We need your help to collect data. Please report rumbling
              here when you hear it.
              <g:Button text="Report!" ui:field="report" styleName="{style.btnReport}"/>
            </g:HTMLPanel>
            <h:HumInstanceEditor ui:field="humInstanceEditor"/>
          </g:DeckLayoutPanel>
        </g:west>
      </g:SplitLayoutPanel>
    </g:center>
  </g:DockLayoutPanel>
</ui:UiBinder>
